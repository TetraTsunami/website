{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "src/**/*",
  ],
  "exclude": [
    "dist",
    "node_modules",
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@images/*": [
        "src/assets/images/*"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "skipLibCheck": true,
  }
}
