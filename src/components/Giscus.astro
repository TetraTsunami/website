---
import { GISCUS_CATEGORY, GISCUS_CATEGORY_ID, GISCUS_REPO, GISCUS_REPO_ID } from 'astro:env/client';
// render giscus comments. for some reason the giscus web component is 4x the size of the normal script tag
// so we use the script tag instead :)
---

<script
  is:inline
  data-astro-rerun
  src="https://giscus.app/client.js"
  data-repo={GISCUS_REPO}
  data-repo-id={GISCUS_REPO_ID}
  data-category={GISCUS_CATEGORY}
  data-category-id={GISCUS_CATEGORY_ID}
  data-mapping="pathname"
  data-strict="1"
  data-reactions-enabled="1"
  data-emit-metadata="0"
  data-input-position="top"
  data-theme="preferred_color_scheme"
  data-lang="en"
  crossorigin="anonymous"
  async></script>
