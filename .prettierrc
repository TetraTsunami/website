{
  "semi": true,
  "astroAllowShorthand": true,
  "printWidth": 150,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "tabWidth": 2,
  "singleQuote": true,
  "plugins": ["prettier-plugin-astro", "prettier-plugin-tailwindcss"],
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    }
  ]
}
